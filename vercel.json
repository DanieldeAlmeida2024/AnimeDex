{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",      
          "prisma/schema.prisma" 
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)", 
      "dest": "dist/main.js"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build && npx prisma generate"
}